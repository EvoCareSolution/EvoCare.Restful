@model EVOpsPro.Repositories.KhiemNVD.Models.ReminderKhiemNvd

@{
    ViewData["Title"] = "Edit Reminder";
    var filterQuery = ViewBag.FilterQuery as IDictionary<string, string> ?? new Dictionary<string, string>();
    var filterQueryString = ViewBag.FilterQueryString as string ?? string.Empty;
}

<section class="card">
    <div class="card-header">
        <div>
            <p class="text-muted mb-1 small">Update delivery timing</p>
            <h1 class="h4 mb-0">Edit Reminder</h1>
        </div>
    </div>
    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="ReminderKhiemNvdid" />
        <partial name="~/Views/Shared/_FilterQueryHiddenFields.cshtml" model="filterQuery" />
        <partial name="_ReminderForm" model="Model" />
        <div class="form-actions">
            <a href="@($"{Url.Action("Index")}{filterQueryString}")" class="btn btn-outline">Cancel</a>
            <button type="submit" class="btn btn-primary">Save changes</button>
        </div>
    </form>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
